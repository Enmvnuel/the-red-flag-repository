// Prisma Schema para Amazon Aurora PostgreSQL
// https://www.prisma.io/docs

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para los reportes de banderas rojas
model Reporte {
  id          String   @id @default(uuid())
  nombre      String
  apellido    String?
  edad        Int
  ciudad      String
  genero      Genero
  fecha       DateTime @default(now())
  descripcion String   @db.Text
  denuncias   Int      @default(1)
  redSocial   String?
  evidencias  String[] // Array de URLs de evidencias
  
  // Campos de auditoría
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Índices para mejorar el rendimiento de búsquedas
  @@index([nombre, apellido])
  @@index([ciudad])
  @@index([genero])
  @@index([fecha])
  @@map("reportes")
}

// Enum para género
enum Genero {
  hombre
  mujer
}

// Modelo para tracking de búsquedas (opcional, para analytics)
model Busqueda {
  id        String   @id @default(uuid())
  termino   String
  ciudad    String?
  genero    Genero?
  fecha     DateTime @default(now())
  
  @@index([termino])
  @@index([fecha])
  @@map("busquedas")
}

// Modelo para estadísticas por ciudad (opcional)
model EstadisticaCiudad {
  id              String   @id @default(uuid())
  ciudad          String   @unique
  totalReportes   Int      @default(0)
  ultimaActualizacion DateTime @updatedAt
  
  @@map("estadisticas_ciudad")
}
